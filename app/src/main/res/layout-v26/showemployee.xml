<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="#798A67"
        android:padding="10sp"
        android:layout_marginTop="5sp"
        app:cardCornerRadius="20sp"
        android:layout_margin="10sp"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B8BFB0"
            android:layout_margin="5sp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B8BFB0"
        android:layout_margin="5sp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/statusofhim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
   android:layout_marginTop="15sp"
            android:gravity="center_vertical"
            android:foregroundGravity="center_horizontal"
            android:padding="10sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonround112"

            />

        <ImageView
            android:layout_width="70sp"
            android:foregroundGravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/employee"
            android:layout_height="50sp"/>
        <TextView
            android:id="@+id/nameofemployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Names XYZZ ABCD"
           android:layout_marginTop="10sp"
            android:padding="9sp"
   android:gravity="center_horizontal"

            android:foregroundGravity="center_horizontal"
            android:background="@drawable/buttonround2"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>
            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+88017485691988765"
                android:layout_margin="5sp"
                android:padding="9sp"
                android:textAlignment="center"
                android:background="@drawable/buttonround2"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B8BFB0"
            android:layout_margin="5sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/historyshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:gravity="center_vertical"
                android:foregroundGravity="center_horizontal"
                android:textAlignment="center"
                android:padding="10sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonround2"
                android:text="Show History"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/deletehistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:gravity="center_vertical"
                android:foregroundGravity="center_horizontal"
                android:textAlignment="center"
                android:padding="10sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonround2"
                android:text="Delete History"
                android:textColor="#BF390F"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>